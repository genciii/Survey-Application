<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ibemakale.MainActivity" >

        <TextView
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaç defa internet üzerinden alış veriş yaptınız?" />

        <EditText
            android:id="@+id/ra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a1"
            android:hint="&apos;4&apos; gibi" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/ra1"
            android:layout_marginTop="10dp"
            android:background="@drawable/separator" >
        </View>

        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ra1"
            android:layout_marginTop="20dp"
            android:text="En sevdiğiniz renk hangisidir?" />

        <EditText
            android:id="@+id/rra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a2"
            android:hint="&apos;Mavi&apos; gibi..." />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/rra1"
            android:layout_marginTop="10dp"
            android:background="@drawable/separator" >
        </View>

        <TextView
            android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rra1"
            android:layout_marginTop="20dp"
            android:text="Hangi Ehliyet Türüne Sahipsiniz?" />

        <EditText
            android:id="@+id/rrra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a3"
            android:hint="&apos;A2&apos; gibi..." />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/rrra1"
            android:layout_marginTop="10dp"
            android:background="@drawable/separator" >
        </View>

        <TextView
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rrra1"
            android:layout_marginTop="20dp"
            android:text="Hangi tadi tercih edersiniz? (Tatli, tuzli , eksi, aci)" />

        <EditText
            android:id="@+id/rrrra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a4"
            android:hint="&apos;Tatlı&apos; gibi..." />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/rrrra1"
            android:layout_marginTop="10dp"
            android:background="@drawable/separator" >
        </View>

        <TextView
            android:id="@+id/a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rrrra1"
            android:layout_marginTop="20dp"
            android:text="Eğitim Durumunuz Nedir?" />

        <EditText
            android:id="@+id/rrrrra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a5"
            android:hint="&apos;Üniversite&apos; gibi..." />

        <Button
            android:id="@+id/rq2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/rrrrra1"
            android:layout_marginTop="40dp"
            android:text="TESTI BITIR!!!" />

        <Chronometer
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/rq2"
            android:layout_weight="0"
            android:paddingBottom="20dip"
            android:paddingTop="20dip" />

        <Button
            android:id="@+id/rq3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stopwatch"
            android:layout_marginTop="40dp"
            android:text="S" />
    </RelativeLayout>

</ScrollView>